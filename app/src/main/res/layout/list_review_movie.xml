<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/holo_blue_dark"
        android:id="@+id/BlackLine_afterReview"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Reviewer Name"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="30dp"
        android:padding="10dp"
        android:id="@+id/textView_reviewer_name" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#181818"
        android:padding="10dp"
        android:background="@drawable/draw_box"
        android:text="Reviewer review bbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbggggggsdddddd"
        android:id="@+id/textView_reviewer_review" />

</LinearLayout>